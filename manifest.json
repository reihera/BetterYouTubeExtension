{
  "manifest_version": 3,
  "name": "Better YouTube Layout",
  "version": "0.1.37",
  "author": "Reihera",
  "developer": {
    "name": "Reihera",
    "url": "https://github.com/reihera/BetterYouTubeExtension"
  },
  "description": "Makes the YouTube layout not dogshit.",

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["BYL.js", "inject.js"],
      "css": ["style.css"]
    }
  ],
  "action": {
  "default_icon": {
    "16": "icons/fuckasslogo16.png",
    "32": "icons/fuckasslogo32.png"
    },
    "default_title": "fuck you"
},

  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com",
      "strict_min_version": "58.0"
  }
}
}
